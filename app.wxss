/**app.wxss**/

page, .page {
  width: 100%;
  height: 100%;
}

/*页面下部悬浮按钮*/
.createM {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 160rpx;
    background: #fff;
    font-weight: bold;
    border-top: 1px solid silver;
    z-index: 2;
}

.createM button {
    position: absolute;
    bottom: 24rpx;
    margin-left: 5%;
    width: 90%;
}

/*右下角悬浮按钮*/
.add {
    position: absolute;
    right: 60rpx;
    bottom: 60rpx;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    /*border: 1px solid #09bb07;*/
    background: rgba(9, 187, 7, 0.2);
}

.add image {
    width: 60rpx;
    height: 60rpx;
}
