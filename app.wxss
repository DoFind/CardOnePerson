/*右下角 添加项目 悬浮按钮*/
.add-btn {
  position: fixed;
  right: 60rpx;
  bottom: 60rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(9, 187, 7, 0.2);
}

.add-btn image {
  width: 60rpx;
  height: 60rpx;
}

/*页面下部悬浮按钮*/
.createM {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 140rpx;
    font-weight: bold;
    background: #fff;
    border-top: 2rpx solid #eee;
    z-index: 2;
}

.createM button {
    position: absolute;
    bottom: 24rpx;
    margin-left: 5%;
    width: 90%;
}

/* 颜色 */
.c-doing {
