/* 一些测试样式 */

.box {
  padding: 10rpx 40rpx 20rpx;
  border-radius: 20rpx;
  background: #fff;
}
.main-title {
  padding: 30rpx 20rpx 20rpx 40rpx;
  font-size: 22px;
  /* font-weight: bold; */
  color: #333;
}
.flex-column {
  display: flex;
  flex-direction: column;
}
.flex-row {
  display: flex;
  align-items: center;
}

.font16 {
  font-size: 16px;
  color: #666;
}
.font18 {
  font-size: 18px;
  color: #666;
}

page,
.main-container {
  width: 750rpx;
  min-height: 100%;
  overflow-x: hidden;
  /* background:#f4f4f4; */
}

