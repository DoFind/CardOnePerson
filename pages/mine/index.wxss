
.user-info {
  padding-top: 40rpx;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fff;
}

.user-pic {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}
.user-name {
  margin-top: 30rpx;
  font-size: 18px;
  color: #272727;
}

.list-wrap {
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  background: #fff;
  border-top: 1rpx solid #f4f4f4;
}

.list-item {
  height: 100rpx;
  padding: 0 40rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f4f4f4;
}
.list-item .text {
  flex: 1;
  font-size: 16px;
  color: #272727;
}
.list-item .arrow {
  width: 20rpx;
  height: 20rpx;
}

.button-wrap {
  margin: 30rpx;
}



















