.punch-item {
  position: relative;
  width: 100%;
  height: 270rpx;
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  color: #666;
  background: #fff;
  overflow: hidden;
}

.punch-item .wrap {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: inline-flex;
  flex-direction: column;
}

.punch-item .name {
  display: block;
  padding: 40rpx 10rpx 10rpx;
  font-size: 24px;
  text-align: center;
  letter-spacing: 4rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.punch-item .btn {
  margin: 10rpx auto;
}

.punch-item .time {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
}
