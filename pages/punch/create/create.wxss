.main-container {
  position: relative;
  background: #eee;
}

.input-box  {
  width: 100%;
  margin-bottom: 20rpx;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
  background: #fff;
}

.box-title {
  height: 60rpx;
  line-height: 60rpx;
  padding: 10rpx 20rpx;
}

/* 活动名称，地址栏 的文字上下居中显示*/
.name, .time-list {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
}

.name input{
  height: 80rpx;
}

.content {
  height: 180rpx;
  padding: 20rpx;
  line-height: 60rpx;
}

/* 时间 picker */
.time-box {
  background: #fff;
  border-left: 1px solid #ddd;
}

/* 切换按钮 */
.switch {
  padding: 0 20rpx 20rpx;
}

/* 输入域 */
.duration-time {
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
  padding-left: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.duration-time input {
  display: inline-block;
  width: 94rpx;
  height: 90%;
  margin-right: 20rpx;
  text-align: center;
  border: 4rpx solid #1AAD19;
  border-radius: 10rpx;
}
.duration-time text:last-child {
  color:#999;
  font-size: 24rpx;
}

.time-list {
  width: 100%;
  position: relative;
}

.time-list:first-child {
  border-bottom: 1px solid #ddd;
}

.time-list .title, .time-list .date, .time-list .time {
  position: absolute;
}

.time-list .title {
  width: 30%;
  margin-right: 2px;
}

.time-list .date {
  width: 40%px;
  right: 10%;
}

.time-list .time {
  right: 0;
  width: 25%;
}
