.page {
    position: relative;
}

.list {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
}

.list-i {
    width: 90%;
    /*height: 400rpx;*/
    background: #eee;
    margin: 10px auto 20px;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
}

.content {
    position: relative;
    padding: 20rpx;
    border-bottom: 1px solid #888;
}

.content text {
    display: block;
    text-align: center;
    line-height: 100rpx;
    padding: 50rpx 0;
}

.btn {
    text-align: center;
}

.time {
    height: 80rpx;
    line-height: 80rpx;
    color: #b2b2b2;
    padding: 0 30rpx;
}
